<!DOCTYPE html>
<html>
  <head>
    <title>Whisper App</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  </head>
  <body class="container">
		<h2>Whisper App</h2>
					<a href="#contactModal" class="btn btn-info btn-sm" data-toggle="modal">Add Contact</a>
				<form action="/subscribe" method="post" id='groupForm'>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="inputTopic">Topic</label>
							<input type="text" class="form-control" name="inputTopic" value=""/>
						</div>
					</div>

					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="inputSessionP">Session Password</label>
							<input type="text" class="form-control" name="inputSessionP" value=""/>
						</div>
					</div>
					<button type="submit" class="btn btn-primary btn-sm">Subscribe</button>
				</form>

				<form action="/postContact" method="post" id='groupForm'>

					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="inputTopic">Topic</label>
							<input type="text" class="form-control" name="inputTopic" value=""/>
						</div>
					</div>

					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="inputSessionP">Contact Name</label>
							<input type="text" class="form-control" name="inputContact" value=""/>
						</div>
					</div>

					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="inputMessage">Message</label>
							<textarea type="text" class="form-control" name="inputMessage" value=""/> </textarea>
						</div>
					</div>

					<button type="submit" class="btn btn-primary btn-sm">Post</button>
				</form> <br>

				<form action="/post" method="post" id='groupForm'>

					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="inputTopic">Topic</label>
							<input type="text" class="form-control" name="inputTopic" value=""/>
						</div>
					</div>

					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="inputSessionP">Session Password</label>
							<input type="text" class="form-control" name="inputSessionP" value=""/>
						</div>
					</div>

					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="inputMessage">Message</label>
							<textarea type="text" class="form-control" name="inputMessage" value=""/> </textarea>
						</div>
					</div>

					<button type="submit" class="btn btn-primary btn-sm">Post</button>
				</form>

				<br><br>
				<h5>Topics subscribed to </h5>
				<div class="row">
					<%if(sessionStorage && sessionStorage.length>0) { %>
						<% for(let session of sessionStorage) {%>
							<p><%=session.topic%></p>
							<br> <br>
					<%	}%>
					<% } %>
				</div>
				<br>
				<h5>Messages Received</h5>
					<%if(messageStorage && messageStorage.length>0) { %>
						<% for(let message of messageStorage) {%>
							<div class="row">
							<p><%=message%></p>
						</div>
					<%	}%>
					<% } %>

					<div id="contactModal" class="modal fade">
						<div class="modal-dialog modal-confirm">
							<div class="modal-content">
								<div class="modal-header">
									<h4 class="modal-title">Add Contact</h4>
									<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
								</div>
								<div class="modal-body">
								<form action="/contact" method="post" id='form'>
									<div class="form-group">
										<label for="name">Name</label>
										<input type="text" class="form-control" name="name" value="" required/>
									</div>
										<div class="form-group">
											<label for="topic">Topic</label>
											<input type="text" class="form-control" name="topic" value="" required/>
										</div>
										<div class="form-group">
					            <label for="message-text" class="col-form-label">Public Key</label>
					            <textarea class="form-control" name="publicKey" required></textarea>
					          </div>
									</div>
									<div class="modal-footer">
										<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
										<button type="submit" class="btn btn-primary">Confirm</button>
									</div>
								</form>
							</div>
						</div>
					</div>


  </body>
</html>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
